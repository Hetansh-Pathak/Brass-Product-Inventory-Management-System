{
  "name": "brass-management-system",
  "version": "1.0.0",
  "description": "Modern Brass Product Inventory and Billing Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
